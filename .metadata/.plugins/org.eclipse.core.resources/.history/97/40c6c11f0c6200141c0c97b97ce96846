//        System.out.println(element);
//        System.out.println("i = " + i);
//        i++;
//		}
	System.out.println(eval);
	String test= "ixuva";
	int i=3;
	int c = i+1;
	System.out.println(test.substring(0, i-2) + "*" + test.substring(c));
	}
	public static String sPlit (String str){
		String toSplit = str;
	String  splitString[] = toSplit.split("\\s+");
	//String element : splitString
	String toEval = "";
	String feval = "";
	for (int i = 0; i < splitString.length; i++) {
			if(splitString[i].equals("*"))
			{
				if (i>0){
					int before = Integer.parseInt(splitString[i-1]);
					int after = Integer.parseInt(splitString[i+1]);
				int eval = before * after;
				toEval = Integer.toString(eval);
				if(i+2 < splitString.length && i - 2 > 0){
					String nstring = toSplit.substring(0, i-2) + toEval + toSplit.substring(i + 1);
					feval = sPlit(nstring);	
					}
				else {
					String nstring = toEval + toSplit.substring(i + 4);
					feval = sPlit(nstring);	
				}
				}
			}
		}
	return feval;
	}
}
